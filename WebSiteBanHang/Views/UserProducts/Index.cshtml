@model IEnumerable<WebSiteBanHang.Models.UserProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="menu justify-content-center col-md-2">
        <ul>
            <li>
                <a id="home" href="/UserProducts/index"><img src="https://hoclaptrinh.asia/wp-content/uploads/2020/04/menu-icon-la-gi-1.jpg" style=" width:20px; height:20px; margin-right:10px;" />list</a>
            </li>
            <li>
                <a id="Create" href="/UserProducts/Create"><img src="https://www.nicepng.com/png/detail/202-2022683_edit-svg-png-icon-free-download-create-icon.png" style="width: 20px; height: 20px; margin-right: 10px;" />New</a>
            </li>
            <li>
                <a id="Search" href="/UserProducts/Search"><img src="https://upload.wikimedia.org/wikipedia/commons/3/36/Search_Icon.png" style="width: 20px; height: 20px; margin-right: 10px;" />Search</a>
            </li>
        </ul>
    </div>
    <div class="col-md-10">

        <div class="card">
            <div class="card-header">
                <h3>User</h3>
            </div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.reviewUser)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nameUser)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.emailUser)
                        </th>
                        <th>
                            @Html.Label("Edit")
                        </th>
                        <th>
                            @Html.Label("Delete")
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.reviewUser)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nameUser)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.emailUser)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.idUser }, new { @class = "btn btn-outline-primary" })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete2", new { id = item.idUser }, new { @OnClick = "remove()", @class = "btn btn-outline-danger " })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    function remove() {
        var isConfirm = confirm('Are sure wants to delete?');
        if (isConfirm == true) {
            return true;
        }
        else {
            event.preventDefault();
        }
        return false;

    }
</script>