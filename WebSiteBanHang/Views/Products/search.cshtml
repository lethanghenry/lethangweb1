@model IEnumerable<WebSiteBanHang.Models.Product>

@{
    ViewBag.Title = "search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>search</h2>


<div class="row">
    <div class="menu justify-content-center col-md-2">
        <ul>
            <li>
                <a id="home" href="/Products/index"><img src="https://hoclaptrinh.asia/wp-content/uploads/2020/04/menu-icon-la-gi-1.jpg" style=" width:20px; height:20px; margin-right:10px;" />list</a>
            </li>
            <li>
                <a id="Create" href="/Products/Create"><img src="https://www.nicepng.com/png/detail/202-2022683_edit-svg-png-icon-free-download-create-icon.png" style="width: 20px; height: 20px; margin-right: 10px;" />New</a>
            </li>
            <li>
                <a id="Search" href="/Products/Search"><img src="https://upload.wikimedia.org/wikipedia/commons/3/36/Search_Icon.png" style="width: 20px; height: 20px; margin-right: 10px;" />Search</a>
            </li>
        </ul>
    </div>
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">
                <h3>Search</h3>
            </div>
            <div class="card-body form-group">
                @using (Html.BeginForm())
                {
                    <div class="row align-items-center">
                        <label class="col-2">Name Product:</label>
                        <div class="col-sm-10 mb-3">
                            <input name="searchNameProduct" type="text" class="form-control" style="max-width: 100%" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-center align-items-center">
                        <input type="submit" value="Search" class="btn btn-primary" />
                    </div>
                }
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h3> Product</h3>
            </div>
            <div class="card-body">
                <table class="table" border="0">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Category.nameCategory)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nameProduct)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.pictureProduct)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.priceProduct)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.rateProduct)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.qualityProduct)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.weightProduct)
                        </th>

                        <th>
                            @Html.Label("Edit")
                        </th>
                        <th>
                            @Html.Label("Delete")
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.nameCategory)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nameProduct)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.pictureProduct)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.priceProduct)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.rateProduct)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.qualityProduct)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.weightProduct)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.idProduct }, new { @class = "btn btn-outline-primary" })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.idProduct }, new { @class = "btn btn-outline-danger" })
                            </td>
                        </tr>
                    }

                </table>
            </div>

        </div>
    </div>
</div>